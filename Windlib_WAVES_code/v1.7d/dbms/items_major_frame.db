! items_major_frame.db - WIND/WAVES Item Database: item definitions 
! for MAJOR_FRAME events
!
! MAJOR_FRAME - a 64,000 word event
!

!EVENT=FIXED_FORMAT
!EVENT=ROW_SIZE=256
!EVENT=COLUMN_SIZE=250

ITEM=DB_VERSION
	DATA_TYPE=CHARACTER
	TEXT=MAJOR_FRAME 1.0
	DESC="This is the current item database version number"
	AUTHOR_DATE=19950524

ITEM=ALL_WORDS
	EXTRACT=0,8,8,1,0,AREA:M
	DESC="Gets entire MAJOR_FRAME data substream however defined "
	DESC="such that each byte is returned as a 32-bit integer."
	AUTHOR_DATE=19950524

ITEM=WORD$col_$row
	DESC="Any word (byte) specified by column [0..255] and row [0..249]"
	EXTRACT=($1 * 8) + ($2 * 256 * 8),8,-1,1,0,AREA:M
	AUTHOR_DATE=19950925

ITEM=COLUMN$col
	DESC="Any column of words (bytes) specified by column [0..255]"
	EXTRACT=($1 * 8),8,2048,1,0,AREA:M
	AUTHOR_DATE=19950925

ITEM=ROW$row
	DESC="Any row of words (bytes) specified by row [0..249]"
	EXTRACT=($1 * 256 * 8),8,-1,256,0,AREA:M
	AUTHOR_DATE=19950925

! JK TEST ITEMS...

ITEM=JK_/BYTE
	FIXED_VALUE=1:8

ITEM=JK_COL_LENGTH
	FIXED_VALUE=1:8

ITEM=JK_COLUMN_$col
	DESC="Any column of words (bytes) specified by column [0..255]"
	EXTRACT=($1 * "JK_/BYTE"),"JK_/BYTE",2048,1,0,AREA:M
	AUTHOR_DATE=19950925

