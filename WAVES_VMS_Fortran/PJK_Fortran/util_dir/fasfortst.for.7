	PROGRAM FASFORTST
C
C	TESTS AND CALIBRATES FASFOR--LINK WITH FASFOR
C
	DIMENSION AR(2048),AI(2048),PWR(1025)
	DATA TWOPI /6.2831853/
C
C	NP = 10
	NP = 6
	NPROS = 2**NP
	AMP = 2.
	NHARM = 5
	HARM = NHARM
	DO N = 0,NPROS-1
	  AR(N+1) = AMP*SIN(TWOPI*N*HARM/NPROS)
C	  AR(N+1) = AMP*COS(TWOPI*N*HARM/NPROS)
	ENDDO
	CALL FASFOR(NP,AR,AI,PWR)
	PRINT*,'PWR',PWR(NHARM-1),PWR(NHARM),PWR(NHARM+1)
	PRINT*,' AR', AR(NHARM-1), AR(NHARM), AR(NHARM+1)
	PRINT*,(AR(JJ),JJ=1,72)
	PRINT*,' AI', AI(NHARM-1), AI(NHARM), AI(NHARM+1)
	PRINT*,(AI(JJ),JJ=1,72)
C
C	PWR(NHARM) WILL BE AMP**2/2.
C
	STOP
	END
