	FUNCTION ERF(XF)
C
C	COMMUNIQUE PAR J. BORSENBERGER
C
	DIMENSION EB(4),TAB(12)
	DATA EB/7.468241328E-1,8.8208139E-1,8.86207348E-1,
     1		8.8622692545E-1/
	ERF=0
	IF (XF.EQ.0.) RETURN
	XD=0.
	I=XF
	IF (I.LT.1) GO TO 10
	IF (I.GE.4) GO TO 40
	ERF=EB(I)
	XD=I
 10	WIDTH=XF-XD
	TRAV=.5*(EXP(-XD*XD)+EXP(-XF*XF))
	N=2
	TAB(1)=TRAV*WIDTH
	DO 12 I=2,11
	NM1=N-1
	H=WIDTH/N
	DO 5 J=1,NM1,2
	X=XD+H*J
 5	TRAV=TRAV+EXP(-X*X)
	TAB(I)=TRAV*H
	RET=TAB(1)
	C=4.
	KP=I
	LIM=I-1
	DO 7 L=1,LIM
	KM=KP-1
	TAB(KM)=(C*TAB(KP)-TAB(KM))/(C-1.)
	KP=KM
 7	C=C*4.
	TEST=ABS(TAB(1)-RET)-1.E-7
	IF (TEST) 14,14,12
 12	N=N*2
 14	ERF=(ERF+TAB(1))/EB(4)
	RETURN
 40	ERF=1
	RETURN
	END
