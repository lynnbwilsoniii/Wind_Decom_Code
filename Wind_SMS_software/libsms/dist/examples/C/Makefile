CC = gcc
CFLAGS = -g -I/home/winddata/sw/libsms
LDFLAGS = -L/home/winddata/sw/libsms
LOADLIBES = -lsmsc -lm

###########
# targets #
###########

clean:
	$(RM) *.o
	make


